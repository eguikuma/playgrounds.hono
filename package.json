{
  "name": "play.hono",
  "description": "おうちの大切な瞬間を記録する家族のずかん",
  "version": "0.1.0",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "next dev --turbopack",
    "build:scripts": "esbuild styles/scripts/*.ts --outdir=public/scripts --bundle --minify",
    "build": "npm run cloudflare:env && npm run build:scripts && next build",
    "deploy:dry-run": "opennextjs-cloudflare build && opennextjs-cloudflare deploy --dry-run",
    "deploy": "opennextjs-cloudflare build && opennextjs-cloudflare deploy",
    "preview": "opennextjs-cloudflare build && opennextjs-cloudflare preview",
    "upload": "opennextjs-cloudflare build && opennextjs-cloudflare upload",
    "start": "next start",
    "cloudflare:env": "wrangler types",
    "package:deps": "ncu",
    "package:update": "ncu -i",
    "package:update:force": "ncu -u",
    "analyze": "ANALYZE=true next build",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "biome check",
    "format:fix": "biome check --write",
    "tsc": "tsc --noEmit",
    "ci": "run-s cloudflare:env && run-p lint:fix format:fix tsc",
    "db:generate": "drizzle-kit generate --name",
    "db:push": "APP_DEBUG=false drizzle-kit push --config ./drizzle.config.ts",
    "db:studio": "drizzle-kit studio --config ./drizzle.config.ts"
  },
  "dependencies": {
    "@hono/zod-validator": "^0.7.5",
    "@hookform/resolvers": "^5.2.2",
    "@opennextjs/cloudflare": "^1.14.6",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.19",
    "drizzle-orm": "^0.45.1",
    "es-toolkit": "^1.43.0",
    "hono": "^4.10.8",
    "http-status-codes": "^2.3.0",
    "lucide-react": "^0.561.0",
    "next": "^16.0.10",
    "nextjs-toploader": "^3.9.17",
    "react": "^19.2.3",
    "react-device-detect": "^2.2.3",
    "react-dom": "^19.2.3",
    "react-dropzone": "^14.3.8",
    "react-hook-form": "^7.68.0",
    "react-use": "^17.6.0",
    "tailwind-merge": "^3.4.0",
    "tw-animate-css": "^1.4.0",
    "uuid": "^13.0.0",
    "zod": "^4.1.13",
    "zustand": "^5.0.9"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@eslint/eslintrc": "^3",
    "@next/bundle-analyzer": "^16.0.10",
    "@tailwindcss/postcss": "^4",
    "@types/node": "^25",
    "@types/react": "^19",
    "@types/react-dom": "^19",
    "drizzle-kit": "^0.31.8",
    "esbuild": "^0.27.1",
    "eslint": "^9",
    "eslint-config-next": "^16.0.10",
    "eslint-plugin-n": "^17.23.1",
    "eslint-plugin-unicorn": "^62.0.0",
    "npm-check-updates": "^19.2.0",
    "npm-run-all": "^4.1.5",
    "shiki": "^3.20.0",
    "tailwindcss": "^4",
    "typescript": "^5",
    "wrangler": "^4.54.0"
  }
}
